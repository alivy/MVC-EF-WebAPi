
@{
    ViewBag.Title = "Organize";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var Cols = new Zephyr.Models.sys_roleMenuColumnMapService().GetCurrentUserMenuColumns();
}

@section scripts{
    <script src="/Content/js/viewModel/com.viewModel.search.js"></script>
    <script type="text/javascript">
        var data = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model));
        var viewModel = function(){ 
            com.viewModel.search.apply(this,arguments);
        }
        ko.bindingViewModel(new viewModel(data));
    </script>
}

    @Html.RenderToolbar()

    <div class="container_12" style="position:relative;">
        <div class="grid_1 lbl">OrganizeCode</div>
        <div class="grid_2 val"><input type="text" data-bind="value:form.OrganizeCode" class="z-txt " /></div>
        <div class="grid_1 lbl">ParentCode</div>
        <div class="grid_2 val"><input type="text" data-bind="value:form.ParentCode" class="z-txt " /></div>
        <div class="grid_1 lbl">OrganizeName</div>
        <div class="grid_2 val"><input type="text" data-bind="value:form.OrganizeName" class="z-txt " /></div>
        
        <div class="clear"></div>
        
        <div class="grid_1 lbl">Description</div>
        <div class="grid_2 val"><input type="text" data-bind="value:form.Description" class="z-txt " /></div>
        <div class="grid_1 lbl">CreatePerson</div>
        <div class="grid_2 val"><input type="text" data-bind="value:form.CreatePerson" class="z-txt " /></div>
        <div class="grid_1 lbl">UpdatePerson</div>
        <div class="grid_2 val"><input type="text" data-bind="value:form.UpdatePerson" class="z-txt " /></div>
        
        <div class="clear"></div>
        
        <div class="grid_1 lbl">UpdateDate</div>
        <div class="grid_2 val"><input type="text" data-bind="value:form.UpdateDate" class="z-txt " /></div>

        <div class="clear"></div>

        <div class="prefix_9" style="position:absolute;top:5px;height:0;">  
            <a id="a_search" href="#" class="buttonHuge button-blue" data-bind="click:searchClick" style="margin:0 15px;">查询</a> 
            <a id="a_reset"  href="#" class="buttonHuge button-blue" data-bind="click:clearClick">清空</a>
        </div>
    </div>
 
    <table data-bind="datagrid:grid">
            <thead>  
            <tr>  
                <th field="CreatePerson"    sortable="true" align="left"    width="80"     @Html.HideColumn(Cols,"CreatePerson") >CreatePerson</th>
                <th field="UpdatePerson"    sortable="true" align="left"    width="80"     @Html.HideColumn(Cols,"UpdatePerson") >UpdatePerson</th>
                <th field="UpdateDate"    sortable="true" align="left"    width="80"     @Html.HideColumn(Cols,"UpdateDate") >UpdateDate</th>
                <th field="OrganizeName"    sortable="true" align="left"    width="80"     @Html.HideColumn(Cols,"OrganizeName") >OrganizeName</th>
                <th field="OrganizeSeq"    sortable="true" align="left"    width="80"     @Html.HideColumn(Cols,"OrganizeSeq") >OrganizeSeq</th>
                <th field="OrganizeCode"    sortable="true" align="left"    width="80"     @Html.HideColumn(Cols,"OrganizeCode") >OrganizeCode</th>
            </tr>                            
        </thead>      
    </table>
 
